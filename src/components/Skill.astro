---
import { Image } from '@astrojs/image/components';
const { shadowColor, img, yearsOfExperience, levelOfExperience, name }= Astro.props;
---

<main class={`skill flex flex-row my-2 items-center justify-around py-2 px-5 w-full lg:w-5/12 h-full bg-white bg-opacity-30 rounded-md border border-white border-opacity-25 shadow-lg ${shadowColor} backdrop-filter backdrop-blur-sm`}>
    <Image src={img} alt={name} width={50} height={50} fit={"inside"} aspectRatio="1/2" />
    <div class="flex flex-col m-4 w-full h-full">
        <div class="text-base font-bold">{name}</div>
        <div class="text-xs text-gray-500 font-bold">{yearsOfExperience} years of experience.</div>
        <div class="mt-2">
            <div class="w-full bg-gray-300 rounded-full h-1.5">
                <div class="bg-gradient-to-r from-cyan-500 to-blue-500 h-1.5 rounded-full" style={`width: ${levelOfExperience}%`}></div>
                <div class="flex flex-row w-full mt-1 justify-around">
                    <span class="text-xs">Low</span>
                    <span class="text-xs">Medium</span>
                    <span class="text-xs">Advance</span>
                </div>
            </div>
        </div>
    </div>
</main>